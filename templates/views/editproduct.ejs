<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Product</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h2>Edit Product</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="POST" action="/admin/products/edit/<%= product.pId %>" enctype="multipart/form-data">
      <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" value="<%= product.name %>" required>
      </div>

      <div class="form-group">
        <label>Price (KES)</label>
        <input type="number" name="price" class="form-control" value="<%= product.price %>" required>
      </div>

      <div class="form-group">
        <label>Category</label>
        <select name="category" class="form-control" required>
          <option value="drinking" <%= product.category === 'drinking' ? 'selected' : '' %>>Drinking</option>
          <option value="domestic" <%= product.category === 'domestic' ? 'selected' : '' %>>Domestic</option>
        </select>
      </div>

      <div class="form-group">
        <label>Current Image</label><br>
        <% if (product.picture) { %>
          <img src="<%= product.picture %>" alt="Product Image" width="150" class="mb-2">
        <% } else { %>
          <p>No image uploaded</p>
        <% } %>
      </div>

      <div class="form-group">
        <label>Upload New Picture (optional)</label>
        <input type="file" name="picture" class="form-control-file">
      </div>

      <button type="submit" class="btn btn-primary">Update Product</button>
    </form>
  </div>
</body>
</html>
